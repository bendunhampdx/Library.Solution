@{
  Layout = "_Layout";
}

@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

<h1 class="bg-info text-white">All Roles</h1>


<table class="table table-sm table-bordered table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Update</th>
    <th>Delete</th>
  </tr>
  @foreach (var role in Model)
  {
    <tr>
      <td>@role.Id</td>
      <td>@role.Name</td>
      <td>
        <p class="btn btn-sm btn-outline-primary">@Html.ActionLink("Update", "Update", new{ id= role.Id})</p>
      </td>
      <td>
          @using(Html.BeginForm("Delete", "Role", new {id = role.Id}))
          {
            <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger">
          }
    </td>
  </tr>
  }
</table>
<br>
<p class="btn btn-outline-secondary">@Html.ActionLink("Create A Role", "Create")</p>