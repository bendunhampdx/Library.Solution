@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Book>

<h1>Current Book List</h1>
@if (Model.Count ==0)
{
  <h3>Hmmm... Looks like there aren't any books here...</h3>
}
else
{
  @foreach(Book book in Model)
  {
    @Html.ActionLink($"{book.Title}", "Details", new{id = book.BookId}) 
    <br>
  }
}

<br>
<p>@Html.ActionLink("Add new book", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
<p>@Html.ActionLink("View All Authors", "Index", "Authors")</p>