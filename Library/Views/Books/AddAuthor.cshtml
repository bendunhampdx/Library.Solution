@{
  Layout = "_Layout";
}

@model Library.Models.Book

<h3>Add an Author to @Html.DisplayFor(model => model.Title)</h3>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model=>model.BookId)

  @Html.Label("Select an Author")
  @Html.DropDownList("AuthorId")

  <input type="submit" value="Add Author"/>
}

<p>@Html.ActionLink("Return to Book List", "Index")</p>